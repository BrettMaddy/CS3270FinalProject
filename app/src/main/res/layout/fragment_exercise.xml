<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseFragment"
    android:orientation="vertical"
    android:id="@+id/fragment_exercise">

    <Button
        android:id="@+id/btnBicepsAndBack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:text="@string/biceps_and_back"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnTricepsAndChest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:text="@string/triceps_and_chest"
        android:textAlignment="center"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnAbs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:text="@string/abs_core"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnLegs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:text="@string/legs"
        android:textAlignment="center"
        android:textSize="20sp"/>

</LinearLayout>